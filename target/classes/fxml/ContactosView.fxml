<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="view" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="contactosTable" editable="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nombreColumn" minWidth="-1.0" prefWidth="-1.0" text="Nombre" />
          <TableColumn fx:id="emailColumn" minWidth="-1.0" prefWidth="-1.0" text="Email" />
            <TableColumn fx:id="telefonoColumn" minWidth="-1.0" prefWidth="75.0" text="Telefono" />
            <TableColumn fx:id="sexoColumn" minWidth="-1.0" prefWidth="-1.0" text="Sexo" />
            <TableColumn fx:id="direccionColumn" prefWidth="75.0" text="DirecciÃ³n" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="BASELINE_CENTER" spacing="5.0" BorderPane.alignment="BOTTOM_CENTER">
         <children>
            <Button fx:id="nuevoButton" mnemonicParsing="false" onAction="#onNuevoButtonAction" text="Nuevo" HBox.hgrow="NEVER" />
            <Button fx:id="editarButton" disable="true" mnemonicParsing="false" onAction="#onEditarButtonAction" text="Editar" HBox.hgrow="NEVER" />
            <Button fx:id="borrarButton" disable="true" mnemonicParsing="false" onAction="#onBorrarButtonAction" text="Borrar" HBox.hgrow="NEVER" />
            <Button fx:id="enviarButton" disable="true" mnemonicParsing="false" onAction="#onEnviarButtonAction" text="Enviar email" HBox.hgrow="NEVER" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
