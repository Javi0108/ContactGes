<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="view" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="contactosTable" editable="true" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="idColumn" maxWidth="2500.0" minWidth="-1.0" prefWidth="-1.0" text="ID" />
          <TableColumn fx:id="nombreColumn" minWidth="-1.0" prefWidth="-1.0" text="Nombre" />
          <TableColumn fx:id="emailColumn" minWidth="-1.0" prefWidth="-1.0" text="Email" />
            <TableColumn fx:id="telefonoColumn" minWidth="-1.0" prefWidth="75.0" text="Telefono" />
            <TableColumn fx:id="sexoColumn" minWidth="-1.0" prefWidth="-1.0" text="Sexo" />
            <TableColumn fx:id="direccionColumn" prefWidth="75.0" text="DirecciÃ³n" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="40.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="nuevoButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onNuevoButtonAction" HBox.hgrow="SOMETIMES">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/mas.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="editarButton" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEditarButtonAction" HBox.hgrow="SOMETIMES">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/edit.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="borrarButton" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onBorrarButtonAction" HBox.hgrow="SOMETIMES">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/delete.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="enviarButton" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEnviarButtonAction" HBox.hgrow="SOMETIMES">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/enviar_email.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
